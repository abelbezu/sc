<div class="row">

  <div class="col-md-3">
  
</div>
<div class="col-md-6">
  <%= form_with model: @article, class: "form-group" do |form| %>
    Piece:
    <%= form.fields_for :piece do |piece_form| %>
      <div class="field">
        <%= piece_form.text_field :title, class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= piece_form.text_area :body, class: "editable form-control" %>
      </div>
     
      
    <% end %>
    <%= form.submit %>
  <% end %>
 
</div>
<div class="col-md-3">
  
</div>
  
</div>



<script type="text/javascript">
  var editor = new MediumEditor('.editable');

  $(function () {
    $('.editable').mediumInsert({
      editor: editor,
      addons: {
        images: {
          fileUploadOptions: {
            url: '<%= images_path %>',
            acceptFileTypes: new RegExp('(\.|\/)(gif|jpe?g|png)$')
          },

          fileDeleteOptions: {
            url: '<%= images_path %>/remove_image'
          }
        }
      }

    });
  });



</script>
