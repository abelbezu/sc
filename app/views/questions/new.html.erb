<div class="row">
  <div class = "col-md-3"></div>
  <div class = "col-md-6">
    <%= form_with model: @question, class: "form-group" do |form| %>
     <%= form.fields_for :piece do |piece_form| %>
      <div class="field">
        <%= piece_form.text_field :title, class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= piece_form.text_area :body, class: "editable form-control" %>
      </div>
    <% end %>
    <%= form.submit %>
  <% end %>
  </div>
  <div class = "col-md-3"></div>
</div>

<script type="text/javascript">
  var editor = new MediumEditor('.editable');
</script>